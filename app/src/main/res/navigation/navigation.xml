    </fragment>
    <fragment
        android:id="@+id/vpFragment"
        android:name="ir.ariyana.loginsystem.ui.fragments.VpFragment"
        android:label="VpFragment" >
        <action
            android:id="@+id/action_vpFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>