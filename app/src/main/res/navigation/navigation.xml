    <fragment
        android:id="@+id/profileFragment"
        android:name="ir.ariyana.loginsystem.ui.fragments.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_vpFragment"
